<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="home.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.0/jquery.min.js"></script>

    <title>Leaderboard</title>
  </head>
  <body>
    <div class="container-fluid card shadow p-3 mb-5 bg-white rounded">
        <div class="row card-body">
            <div class="col-2 display-2 d-flex align-self-center justify-content-center">
                <img src="http://www.forgeforward.in/wp-content/themes/foundry/style/img/logo-light.png" class="img-fluid" alt="Forge logo">
            </div>
            <div class="col-8">
                <h1 class="display-2 d-flex align-self-center justify-content-center">Leader<span class="text-muted">Board</span></h1>
            </div>
            <div class="col-2 display-2 d-flex align-self-center justify-content-center">
                <img src="http://protosem.tech/assets/img/protosem-logo.png" class="img-fluid" alt="Responsive image">
            </div>
        </div>
    </div>
    <div class="container-fluid card my-5 py-2">
        <div class="card-body">
            <p class="float-right" style="font: size 2em;"><a id="button" href="/admin/edit"><i class="fas fa-user-plus"></i></a>&ensp;&ensp;<a id="button" href="/register"><i class="fas fa-users-cog"></i></a>&ensp;&ensp;<a id="button" href="/logout"><i class="fas fa-sign-out-alt"></i></a></p>
            <table class="table table-striped table-bordered table-hover" id="tab">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Team</th>
                        <th scope="col">Points</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i=0;i<users.length;i++){ %>
                        <tr>
                            <th scope="row"><%= users.indexOf(users[i]) + 1 %></th>
                            <td> <%= users[i].name %> </td>
                            <td> <%= users[i].team_name %> </td>
                            <td> <%= users[i].points %> </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="container mt-5 text-center">
        <h1 class="display-4">
            Edit Leaderboard
        </h1>
    </div>
    <div class="container-fluid mt-5 text-center mb-5">
        <div class="card-body">
            <form method="POST" action="/edit?_method=PUT">
                <select name="name">
                    <% for(var i = 0;i<users.length;i++){ %>
                        <option value= <%= users[i]._id %> > <%= users[i].name%> </option>
                    <% } %>
                    </select>
                <input type="number" name="add" placeholder="add">
                <input type="number" name="sub" placeholder="sub">
                <button type="submit" class="btn btn-success">Edit</button>
            </form>
        </div>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>